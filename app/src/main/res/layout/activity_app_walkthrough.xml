<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    tools:context="nmmu.mills.pastelmadeeasy.FirstTimeLaunch.AppWalkthrough">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/walk_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="@dimen/card_inside">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skip"
                    android:textColor="@android:color/white"
                    android:id="@+id/skip_text"
                    android:textSize="@dimen/card_title_size"/>

                <!--<ImageView-->
                    <!--android:id="@+id/tut_icon_close"-->
                    <!--android:layout_width="@dimen/nav_icon_size"-->
                    <!--android:layout_height="@dimen/nav_icon_size"-->
                    <!--android:layout_gravity="right"-->
                    <!--android:src="@drawable/ic_close" />-->
            </LinearLayout>

            <ImageView

                android:id="@+id/walk_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxHeight="@dimen/logo_size"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/walk_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/walkthrough_text_height"
                android:layout_marginBottom="@dimen/walkthrough_text_margin"
                android:layout_marginLeft="@dimen/card_inside"
                android:layout_marginRight="@dimen/card_inside"
                android:gravity="center"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="@dimen/card_title_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimaryDark" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/card_inside">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tut_icon_previous"
                    android:layout_width="@dimen/nav_icon_size"
                    android:layout_height="@dimen/nav_icon_size"
                    android:src="@drawable/ic_previous" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tut_icon_next"
                    android:layout_width="@dimen/nav_icon_size"
                    android:layout_height="@dimen/nav_icon_size"
                    android:src="@drawable/ic_next" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
