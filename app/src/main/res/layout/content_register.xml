<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="nmmu.mills.pastelmadeeasy.FirstTimeLaunch.RegisterActivity"
    tools:showIn="@layout/activity_register"
    android:background="@color/colorPrimary" android:weightSum="1" android:gravity="center">

    <ImageView
        android:id="@+id/username_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/nav_text_margin"
        android:layout_marginTop="@dimen/nav_text_margin"
        android:src="@drawable/ic_brand"
        android:transitionName="logo_transition" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Register"
        android:textColor="@android:color/white"
        android:textSize="@dimen/card_title_size" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginBottom="80dp" android:layout_marginTop="10dp"
        android:layout_weight="0.09" android:layout_gravity="center_horizontal" android:layout_marginLeft="50dp"
        android:weightSum="1">

        <EditText
            android:id="@+id/ed_fname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:hint="First Name"
            android:inputType="textCapWords"
            android:paddingRight="30dp"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorBackgroundGrey" />

        <EditText
            android:id="@+id/ed_lname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:hint="Last Name"
            android:inputType="textCapWords"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorBackgroundGrey" />
    </LinearLayout>

    <EditText
        android:id="@+id/ed_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:inputType="textCapWords" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/ed_password" android:layout_marginLeft="80dp" android:layout_marginRight="80dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/ed_cpassword" android:layout_marginLeft="80dp" android:layout_marginRight="80dp"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginBottom="80dp" android:layout_marginTop="10dp"
        android:layout_weight="0.09" android:layout_gravity="center_horizontal" android:layout_marginLeft="50dp"
        android:weightSum="1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/user_login" android:layout_gravity="center_horizontal" android:layout_weight="0.17"
            android:backgroundTint="@color/colorAccent"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/user_register" android:layout_weight="0.26" android:backgroundTint="@color/colorAccent"/>
    </LinearLayout>


</LinearLayout>
